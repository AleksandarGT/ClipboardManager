<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="Theme.ClipboardManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="android:windowBackground">@color/dThemePrimaryDarkColor</item>
        <item name="colorPrimary">@color/dThemePrimaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AlertDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="NoteContentTextbox" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@color/dThemePrimaryLightColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">
            @drawable/layout_bg
        </item>
    </style>

    <style name="CopyButtonSrc">
        <item name="android:tint">@color/white</item>
        <item name="backgroundTint">@color/dThemePrimaryLightColor</item>
    </style>

    <style name="FavoriteStatus">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="CardViewLook" parent="CardView">
        <item name="cardBackgroundColor">@color/dThemePrimaryLightColor</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:elevation">
            4dp
        </item>
        <item name="android:background">
            @drawable/layout_bg
        </item>
        <item name="android:backgroundTint">
            @color/dThemePrimaryLightColor
        </item>
    </style>

    <style name="MainRecyclerText">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="RecyclerView.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="backgroundTint">@color/dThemePrimaryLightColor</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="Theme.ClipboardManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" >
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:itemTextAppearance">@color/white</item>
    </style>


    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>