<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClipboardManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="android:windowBackground">@color/primaryDarkColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>

    <style name="AlertDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="NoteContentTextbox" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">
            @drawable/layout_bg
        </item>
    </style>

    <style name="CopyButtonSrc">
        <item name="android:tint">@color/black</item>
    </style>


    <style name="FavoriteStatus">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="MainRecyclerText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:elevation">
            4dp
        </item>
        <item name="android:background">
            @drawable/layout_bg
        </item>
        <item name="android:backgroundTint">
            @color/white
        </item>
    </style>

    <style name="RecyclerView.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="Theme.ClipboardManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.ClipboardManager.PreferenceScreen">
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="Theme.ClipboardManager.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ClipboardManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>